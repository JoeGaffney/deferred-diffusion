FROM python:3.12.10-alpine3.21

WORKDIR /app

# Copy requirements first for better caching
COPY agentic/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy only specific directories instead of everything
COPY agentic/ ./agentic/

# Copy LICENSE and README files
COPY README.md /README.md
COPY LICENSE /LICENSE
LABEL license="MIT"

# Set the working directory to the api folder
WORKDIR /app/agentic

# Expose the port Gradio runs on
EXPOSE 7000

# Set environment variable to make Gradio listen on all interfaces
ENV GRADIO_SERVER_NAME="0.0.0.0"
ENV GRADIO_SERVER_PORT="7000"

# Command to run the application when the container starts
CMD ["python", "app.py"]
